<section class="card new-post-form">
  <h2>Create New Post</h2>

  <div class="card-body">
    <form>
      <div class="form-group">
        <label for="post-title">
          <h3>
            Title
          </h3>
        </label>
        <input type="text" id="post-title" name="post-title" class="form-control">
      </div>
      <div class="form-group">
        <label for="post-content">
          <h3>
            Content
          </h3>
        </label>
        <input type="text" id="post-content" name="post-content" class="form-control" />
      </div>
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
</section>
</br>
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  {{#each posts as |post|}}
  {{> post-info post}}
  </br>
  <a href="/dashboard/edit/{{post.id}}" type="button" class="edit-link">Edit post</a>
  {{/each}}
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>